<div class="page l-header--fixed">
  {{> organisms-header }}
  <div class="l-main" role="main">

    {{> organisms-page-title }}

    {{# emergency }}
      {{> molecules-alert-error }}
    {{/ emergency }}

    <div class="l-container l-davis-flipped">
      {{> molecules-breadcrumbs }}

      <div class="l-content">
        <div class="panel o-box--large">
          <h2 class="heading--underline">{{ headline.short }}</h2>
          <div class="u-align--right u-width--half">
            {{> molecules-figure-with-caption }}
          </div>
          {{ excerpt.long }}
          <h3>{{ headline.short }}</h3>
          {{ excerpt.short }}
          {{> atoms-unordered }}
        </div>
      </div><!--end .l-content-->

      <div class="l-sidebar-second">
        <div class="panel">
          {{> molecules-sub-nav }}
        </div>
        <div class="panel panel--transparent panel--auxilary">
          <h2 class="panel__title">Follow Us</h2>
          {{> molecules-social-follow }}
        </div>
      </div><!--end .l-sidebar-second-->

    </div>
  </div><!--End role=main-->
  {{> organisms-footer }}
</div>
